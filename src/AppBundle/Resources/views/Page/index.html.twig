{% extends "::base.html.twig"%}
{% block title %}
         Karavarum
{% endblock %}
{% block body %}
    <ul>
        {% for category in categories %}
            <a href="{{ path('index', {'slug':category.id}) }}">{{ category.name }}</a>
        {% endfor %}
    </ul>

    <div>
        {% for book in books %}
            <a href="{{ path('show', {'slugBook': book.id})}}">
                <p>{{book.title }}</p>
            </a>
        {% endfor %}
    </div>
{% endblock %}